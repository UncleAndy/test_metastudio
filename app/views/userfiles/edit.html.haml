%h2{:align => 'center'}
  = I18n.t('file_labels.edit_title')
.form-container
  = form_for [@user, @file], :html => { :role => 'form', :class => 'forms' } do |f|
    .form-group
      %label{ for: "title" }
        = I18n.t('file_labels.title')
      = f.text_field :title, class: 'form-control', value: @file.title
    .form-group
      %label{ for: "tags" }
        = I18n.t('file_labels.tags')
      = f.text_field :tags, class: 'form-control', value: @file.tags.pluck(:name).join(',')
    %button.btn.btn-success{ type: 'submit' }
      = I18n.t('file_labels.save')


:javascript
  $(function(){
    $( "#file_tags" ).tagit({
      allowSpaces: true,
      autocomplete: {
        delay: 0,
        minLength: 2,
        source: '/tags',
      }
    })
  });
