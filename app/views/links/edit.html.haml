%h2{:align => 'center'}
  = I18n.t('links_labels.edit_title')
.form-container
  = form_for [@user, @link], :html => { :role => 'form', :class => 'forms' } do |f|
    .form-group
      %label{ for: "url" }
        = I18n.t('links_labels.url')
      = f.text_field :url, class: 'form-control', value: @link.url
    .form-group
      %label{ for: "name" }
        = I18n.t('links_labels.name')
      = f.text_field :name, class: 'form-control', value: @link.name
    %button.btn.btn-success{ type: 'submit' }
      = I18n.t('links_labels.save')
